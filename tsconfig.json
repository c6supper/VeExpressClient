{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng2-smart-table": [
        "projects/ng2-smart-table/src/public-api.ts"
      ],
      "galaxy": [
        "projects/galaxy/src/public-api.ts"
      ],
      "@ngx-translate/core": [
        "projects/galaxy/node_modules/@ngx-translate/core"
      ],
      "@ngx-translate/http-loader": [
        "projects/galaxy/node_modules/@ngx-translate/http-loader"
      ],
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}